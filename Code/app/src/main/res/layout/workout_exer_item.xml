<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/shadow_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="39"/>
        <TextView
            android:id="@+id/exerName"
            android:layout_width="match_parent"
            android:layout_weight="0.19"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Push Up"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/vertical_margin_sum"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.11"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1 set  10 reps"
            android:textSize="15sp"
            android:textColor="@color/tabgrey"
            android:layout_marginLeft="@dimen/vertical_margin_sum"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="71"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/exerImage"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/start_challenge"
        android:layout_weight="1"/>
</LinearLayout>
