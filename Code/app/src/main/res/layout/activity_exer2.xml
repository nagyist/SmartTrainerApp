<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:smarttrainer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.smarttrainer.smarttrainer.ExerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/instr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:titleTextColor="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        smarttrainer:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.smarttrainer.smarttrainer.InstrActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bench Press"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="#000000"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/exer_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bench_press_gif"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muscles:"
            android:textSize="12sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pectoralis major, anterior deltoid, triceps"
            android:textSize="10sp"
            android:textColor="@color/tabgrey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="242"
            android:orientation="vertical"
            android:background="@color/tabgrey">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="SCORE"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/cur_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0%"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.9">
                <TextView
                    android:id="@+id/prev_best_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="0%"
                    android:textSize="12.6sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/prev_best_num"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="prev. best: "
                    android:textSize="13.5sp"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="141"
            android:orientation="horizontal"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/layout_border">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/set_in_exer"
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/set_in_exer"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/set_in_exer"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:textColor="@color/tabgrey"
                        android:text="SET"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/cur_set"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:text="2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textSize="27sp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/layout_border">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/reps_in_exer"
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/numbers"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/reps_in_exer"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:textColor="@color/tabgrey"
                        android:text="REP"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/cur_rep"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textSize="27sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/stop_btn"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="141"
            android:background="@android:color/white"
            android:src="@drawable/stop"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Come on"/>
</LinearLayout>
